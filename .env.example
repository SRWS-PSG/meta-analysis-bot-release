# Slack API認証情報（必須）
SLACK_BOT_TOKEN=xoxb-your-meta-analysis-bot-token
SLACK_SIGNING_SECRET=your-signing-secret
SLACK_APP_TOKEN=xapp-your-app-token

# オプション: HTTPの代わりにSocket Modeを使用する場合はtrueに設定
SOCKET_MODE=false
STORAGE_BACKEND=file
GEMINI_API_KEY=your-gemini-api-key
GEMINI_MODEL_NAME=gemini-2.5-flash-preview-05-20
# gemini-2.5-pro-preview-05-06
# gemini-2.5-flash-preview-05-20
LOG_LEVEL=DEBUG

# オプション: HTTPサーバーのポート (デフォルト: 3000)
PORT=3000

# オプション: OpenAI APIキー (MCPでの将来の使用のため)
#OPENAI_API_KEY=your-openai-api-key

# Heroku設定
HEROKU_APP_NAME=your-app-name
HEROKU_API_KEY=your-heroku-api-key

# テスト用Slack設定
SLACK_UPLOAD_BOT_TOKEN=xoxb-your-test-messenger-bot-token
SLACK_UPLOAD_CHANNEL_ID=your-test-channel-id
META_ANALYSIS_BOT_ID=your-meta-analysis-bot-user-id
