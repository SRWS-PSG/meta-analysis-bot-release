# === 基本的なSlack設定 ===
SLACK_BOT_TOKEN="xoxb-your-token"
SLACK_SIGNING_SECRET="your-signing-secret"

# === 動作モード設定 ===
# Socket Mode (ローカル開発推奨): WebSocket接続、ファイアウォール内で動作可能
# HTTP Mode (Cloud Run推奨): HTTPエンドポイント、スケーラブル
SOCKET_MODE="false"  # true: Socket Mode, false: HTTP Mode (デフォルト: false)

# Socket Modeの場合のみ必要
SLACK_APP_TOKEN="xapp-your-app-token"

# HTTP Modeの場合のポート設定（Cloud Runでは自動設定）
PORT="8080"

# === ストレージ設定 ===
STORAGE_BACKEND="memory"  # memory, redis, dynamodb, fileから選択 (デフォルト: memory)

# STORAGE_BACKENDがredisの場合に設定
# REDIS_HOST="localhost"
# REDIS_PORT="6379"
# REDIS_DB="0"
# REDIS_PASSWORD="" # パスワードがない場合は空欄

# STORAGE_BACKENDがdynamodbの場合に設定
# DYNAMODB_TABLE="slack_thread_contexts"
# AWS認証情報 (例: AWS_ACCESS_KEY_ID, AWS_SECRET_ACCESS_KEY, AWS_DEFAULT_REGION) は環境変数またはAWS設定ファイルで設定してください。

GEMINI_API_KEY="your-gemini-api-key"  # Gemini APIを使用する場合 (必須)
GEMINI_MODEL_NAME="gemini-2.5-flash-preview-05-20" # 使用するGeminiモデル名 (デフォルト: gemini-1.5-flash-latest)

# Rスクリプトの実行パス (Dockerコンテナ内では通常不要)
# R_EXECUTABLE_PATH="C:/Program Files/R/R-4.3.2/bin/Rscript.exe" # Windowsの例
# R_EXECUTABLE_PATH="/usr/bin/Rscript" # Linux/WSLの例
# R_EXECUTABLE_PATH="/opt/homebrew/bin/Rscript" # macOSの例
